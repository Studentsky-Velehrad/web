---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
    title="Studentský Velehrad 2026" 
    description="Celostátní setkání věřících vysokoškoláků a mladých pracujících. 30. dubna – 3. května 2026 na Velehradě. Je čas!"
    image="/images/cover.webp"
>
    <style>
        .cover {
            background: url("/images/cover.webp") center / cover no-repeat;
            display: flex;
            flex-direction: column;
            justify-content: stretch;
            align-items: center;
            min-height: 100svh;
            z-index: 1;
            text-align: center;
            position: relative;
            padding-top: 80px;
            margin-bottom: 0;
        }

        .cover-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            flex: 1;
            width: 100%;
            max-width: 800px;
            padding-top: 50px;
            box-sizing: border-box;
        }

        .cover-text {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            flex: 1;
            padding: 0 1rem;
            margin-top: 55px;
        }

        .cover-text h1 {
            font-family: 'Ohrada', serif;
            font-weight: normal;
            font-size: 7rem;
            color: #1a2764;
            margin-bottom: 1.8rem;
        }

        .subtitle,
        .date {
            font-family: 'Helvetica Now Bold', Arial, sans-serif;
            color: #1a2764;
            font-size: 1.6rem;
        }

        .subtitle {
            margin-bottom: 1.3rem;
        }

        .date {
            margin-bottom: 3rem;
        }

        .button-wrapper {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            align-items: center;
            margin-top: auto;
            padding-bottom: 2rem;
        }

        .uvod-button {
            font-family: 'Open Sans', Arial, sans-serif;
            background-color: #e1543a;
            color: #fff;
            width: 15.5rem;
            height: 58px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50px;
            text-decoration: none;
            font-size: 25px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .uvod-button:hover {
            background-color: hsl(8, 61%, 47%);
            color: #fff;
        }

        .uvod-button.prispet {
            width: 13.5rem;
        }

        #about {
            position: relative;
            z-index: 2;
            width: 100%;
            background-color: #fff;
            margin-top: 0;
            margin-bottom: 0;
            padding-bottom: 2rem;
            padding-top: 2rem;
        }

        .about-flex {
            display: flex;
            justify-content: center;
            text-align: center;
            max-width: 1200px;
            margin: 2rem auto;
            gap: 20px;
            padding: 0 2rem;
        }

        .about-text {
            color: #424753;
            text-align: center;
            width: 560px;
        }

        .about-flex--tiles {
            padding: 0;
        }

        #about h2 {
            text-transform: uppercase;
            margin-bottom: 1.5rem;
            line-height: 1.4;
            font-size: 18px;
            color: #424753;
        }

        #about p {
            margin-bottom: 1.5rem;
            font-weight: 400;
            line-height: 2;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 11px;
            max-width: 1100px;
            margin: 0 auto 3rem;
        }

        .tile {
            position: relative;
            cursor: pointer;
        }

        .grid .tile:nth-child(odd) {
            margin-left: auto;
        }

        .grid .tile:nth-child(even) {
            margin-right: auto;
        }

        .tile img {
            width: 100%;
            display: block;
        }

        .overlay {
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.65);
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 1rem;
            opacity: 0;
            transition: 0.3s;
            pointer-events: none;
        }

        @media (hover: hover) and (pointer: fine) {
            .tile:hover .overlay {
                opacity: 1;
            }
        }

        .tile.active .overlay {
            opacity: 1;
        }

        .social-title {
            text-align: center;
            margin: 4rem 0 6rem;
        }

        .social-title h2 {
            font-size: 1.5rem;
            font-weight: normal;
            margin-bottom: 1rem;
        }

        .social-title p {
            display: flex;
            justify-content: center;
            gap: 2.5rem;
            margin: 0;
        }

        .social-title p a img {
            width: 50px;
            object-fit: contain;
            transition: transform 0.2s;
        }

        .social-title p a img:hover {
            transform: scale(1.1);
        }

        @media (max-width: 640px) {
            .grid {
                grid-template-columns: 1fr;
                padding: 0 15px;
            }

            .grid .tile:nth-child(odd),
            .grid .tile:nth-child(even) {
                margin-left: 0;
                margin-right: 0;
            }

            .about-text {
                width: auto;
            }

            .about-flex {
                flex-direction: column;
                gap: 1rem;
            }
        }

        @media (max-width: 768px) {
            .cover {
                padding-top: 60px;
                z-index: 1;
            }

            .about-flex {
                padding: 0 1rem;
            }

            #about .overlay p {
                line-height: 1.6;
                font-size: 0.9rem;
            }

            .cover-text h1 {
                font-size: 5rem;
                line-height: 1;
                margin: 12px 0px 24px;
            }

            .cover-text {
                margin-top: 0px;
            }

            .subtitle {
                margin: 16px 0px 4.8px;
            }

            .date {
                margin: 16px 0px 32px;
            }

            .cover .subtitle,
            .cover .date {
                font-size: 1.2rem;
            }

            .uvod-button {
                font-size: 20px;
                height: 48px;
                padding: 12px 32px;
                min-width: 180px;
                width: auto;
            }

            .uvod-button.prispet {
                min-width: 200px;
                padding: 12px 36px;
                width: auto;
            }

            .button-wrapper {
                gap: 0.8rem;
                padding-bottom: 1.5rem;
            }

            .social-title p {
                gap: 1.5rem;
            }

            .social-title p a img {
                width: 40px;
            }
        }

        @media (max-width: 480px) {
            .cover-text h1 {
                font-size: 3.5rem;
            }

            .cover .subtitle,
            .cover .date {
                font-size: 1rem;
            }

            .uvod-button {
                font-size: 18px;
                min-width: 160px;
            }

            .cover-content {
                padding-top: 30px;
            }

            .date {
                margin-bottom: 24px;
            }
        }

        /* Burger Menu Styles */
        .burger-menu-btn {
            display: none;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 40px;
            height: 40px;
            background: transparent;
            border: none;
            cursor: pointer;
            z-index: 1001;
        }

        .burger-menu-btn span {
            display: block;
            width: 100%;
            height: 4px;
            background: #1a2764;
            margin-bottom: 5px;
            transition: all 0.3s ease;
        }

        .burger-menu-btn.active span:nth-child(1) {
            transform: rotate(45deg) translate(5px, 5px);
        }

        .burger-menu-btn.active span:nth-child(2) {
            opacity: 0;
        }

        .burger-menu-btn.active span:nth-child(3) {
            transform: rotate(-45deg) translate(5px, -5px);
        }

        .menu-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.7);
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
            z-index: 1000;
        }

        .menu-overlay.active {
            opacity: 1;
            visibility: visible;
        }

        .mobile-menu {
            position: fixed;
            top: 0;
            right: 0;
            width: 250px;
            height: 100%;
            background: #fff;
            padding: 2rem;
            box-shadow: -2px 0 5px rgba(0, 0, 0, 0.3);
            transform: translateX(100%);
            transition: transform 0.3s ease;
            z-index: 1002;
        }

        .mobile-menu.active {
            transform: translateX(0);
        }

        .mobile-menu nav {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .mobile-menu a {
            font-family: 'Open Sans', Arial, sans-serif;
            font-size: 1.2rem;
            color: #1a2764;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .mobile-menu a:hover {
            color: hsl(8, 61%, 47%);
        }

        @media (max-width: 768px) {
            .burger-menu-btn {
                display: flex;
            }

            .desktop-menu {
                display: none;
            }
        }
    </style>

    <Header />

    <!-- Burger Menu -->
    <button class="burger-menu-btn" id="burgerBtn" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
    </button>

    <div class="menu-overlay" id="menuOverlay"></div>

    <div class="mobile-menu" id="mobileMenu">
        <nav>
            <a href="/">Úvod</a>
			<a href="/tym">Tým</a>
            <a href="/chci-prispet">Chci přispět</a>
        </nav>
    </div>

    <div class="content">
        <div class="nav-bar"></div>
        <div class="cover-bar"></div>
        <div class="cover">
            <div class="cover-content">
                <div class="cover-text">
                    <h1>Studentský Velehrad 2026</h1>
                    <p class="subtitle">Celostátní setkání věřících vysokoškoláků a mladých pracujících</p>
                    <p class="date">30. dubna – 3. května 2026</p>
                </div>
                <div class="button-wrapper">
                    <a class="uvod-button">Zaregistruj se</a>
                    <a href="/chci-prispet" class="uvod-button prispet">Chci přispět</a>
                </div>
            </div>
        </div>

        <section id="about">
            <div class="about-flex">
                <div class="about-text">
                    <h2>O akci</h2>
                    <p>Studentský Velehrad je setkání pro věřící vysokoškoláky a mladé pracující. Akce probíhá každé 2 roky na poutním místě Velehrad a na její organizaci se podílí tým dobrovolníků složený ze studentů i pracujících. Letos se koná už 10. ročník.</p>
                    <p>Pro několik stovek účastníků je připraven bohatý program, který nabízí jedinečnou příležitost vytvářet společenství s vrstevníky, diskutovat o mezilidských vztazích, víře a jejím prožívání, povolání i každodenním životě.</p>
                </div>

                <div class="about-text">
                    <h2>Téma SV26: Je čas</h2>
                    <p><em>„Všechno má určenou chvíli a veškeré dění pod nebem svůj čas."</em> <span class="single-line">(Kazatel 3,1–8)</span></p>
                    <p>Žijeme v době, která nás nutí neustále běžet. Stíhat termíny, zkoušky, práci a k tomu naplňovat očekávání druhých. Máme pocit, že nám čas protéká mezi prsty. Ale Bible nám připomíná, že čas není náš nepřítel. Je to dar.</p>
                    <p>Letošní Studentský Velehrad nese téma <strong>„Je čas"</strong>. Možná je čas přestat se hnát. Je čas se zastavit. Je čas mlčet a naslouchat. Je čas hledat a je čas nacházet. Je čas bořit staré zdi a stavět nové mosty. Na Velehradě chceme společně hledat odpovědi na to, pro co právě teď nastal čas v našem životě.</p>
                    <p>Bůh učinil všechno krásné v pravý čas. Je čas to objevit.</p>
                </div>
            </div>

            <h2 class="about-flex">Na co se můžete těšit?</h2>

            <div class="about-flex about-flex--tiles">
                <div class="grid">
                    <div class="tile">
                        <img src="/images/dlazdice/prednasky.webp" alt="Přednášky">
                        <div class="overlay">
                            <p>Inspirativní osobnosti z církevního i veřejného života, které se nebojí otevírat aktuální témata.</p>
                        </div>
                    </div>

                    <div class="tile">
                        <img src="/images/dlazdice/workshopy.webp" alt="Workshopy">
                        <div class="overlay">
                            <p>Kurzy a dílny zaměřené na kreativitu, seberozvoj a praktické dovednosti.</p>
                        </div>
                    </div>

                    <div class="tile">
                        <img src="/images/dlazdice/liturgie.webp" alt="Duchovní program">
                        <div class="overlay">
                            <p>Každodenní mše svaté, chvály, adorace, svátost smíření a prostor pro ztišení.</p>
                        </div>
                    </div>

                    <div class="tile">
                        <img src="/images/dlazdice/skupinky.webp" alt="Diskuzní skupinky">
                        <div class="overlay">
                            <p>Debaty v malých skupinách o víře, vztazích a každodenním životě.</p>
                        </div>
                    </div>

                    <div class="tile">
                        <img src="/images/dlazdice/zabava.webp" alt="Volnočasové aktivity">
                        <div class="overlay">
                            <p>Koncerty, výlety, sportovní aktivity a další program pro odpočinek i společné zážitky.</p>
                        </div>
                    </div>

                    <div class="tile">
                        <img src="/images/dlazdice/koncerty.webp" alt="Společenství">
                        <div class="overlay">
                            <p>Prostředí plné mladých lidí, sdílených hodnot a nových přátelství.</p>
                        </div>
                    </div>

                </div>
            </div>

            <div class="about-flex">
                <div class="about-text">
                    <h2>Je čas se přihlásit!</h2>
                    <p>Kapacita ubytování na Velehradě není neomezená. Zajisti si své místo hned teď. Registrace <a href="/registrace">zde</a>.</p>
                </div>

                <div class="about-text">
                    <h2>Kdo za tím stojí</h2>
                    <p>Akci pořádá <a href="https://vkhcr.cz" target="_blank" rel="noopener noreferrer">Vysokoškolské katolické hnutí ČR</a> ve spolupráci s jednotlivými místními organizacemi.</p>
                </div>
            </div>

            <div class="social-title">
                <h2>Sleduj nás na sociálních sítích!</h2>
                <p>
                    <a href="https://www.facebook.com/studentskyvelehrad/?locale=cs_CZ"><img src="/images/SV26_FB.svg" alt="Facebook"></a>
                    <a href="https://www.instagram.com/studentsky_velehrad/"><img src="/images/SV26_IG.svg" alt="Instagram"></a>
                    <a href="https://www.youtube.com/channel/UCBf-XP-0GacYV8bqpvq1dSw"><img src="/images/SV26_YT.svg" alt="YouTube"></a>
                </p>
            </div>
        </section>
    </div>

    <Footer />
    
    <button id="scrollTopBtn" aria-label="Zpět nahoru"></button>
    <div class="bottom-bar"></div>

    <script>
        // Page-specific: Tile interaction
        const tiles = document.querySelectorAll('.tile');
        tiles.forEach(tile => {
            tile.addEventListener('click', () => {
                if (tile.classList.contains('active')) {
                    tile.classList.remove('active');
                } else {
                    tiles.forEach(t => t.classList.remove('active'));
                    tile.classList.add('active');
                }
            });
        });

        // Burger menu functionality
        const burgerBtn = document.getElementById('burgerBtn');
        const mobileMenu = document.getElementById('mobileMenu');
        const menuOverlay = document.getElementById('menuOverlay');
        const menuLinks = mobileMenu?.querySelectorAll('a');

        function toggleMenu() {
            burgerBtn?.classList.toggle('active');
            mobileMenu?.classList.toggle('active');
            menuOverlay?.classList.toggle('active');
            document.body.style.overflow = mobileMenu?.classList.contains('active') ? 'hidden' : '';
        }

        burgerBtn?.addEventListener('click', toggleMenu);
        menuOverlay?.addEventListener('click', toggleMenu);

        // Close menu when clicking on a link
        menuLinks?.forEach(link => {
            link.addEventListener('click', toggleMenu);
        });
    </script>
</Layout>
