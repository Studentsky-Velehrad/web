    <meta property="og:image" content="https://studentskyvelehrad.cz/images/cover.webp" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://studentskyvelehrad.cz/registrace" />
    <meta property="twitter:title" content="Registrace - Studentský Velehrad 2026" />
