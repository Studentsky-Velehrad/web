    <style>
      .about {
        position: relative;
        z-index: 10;
        width: 100%;
        padding-top: 50px;
      }

      .about-flex {
        display: flex;
        justify-content: center;
        text-align: center;
        max-width: 1200px;
        margin: 2rem auto;
        gap: 20px;
        padding: 0 15px;
      }

      .about-text {
        color: #424753;
        text-align: center;
        width: 100%;
        z-index: 999;
      }

      .about h2 {
        text-transform: uppercase;
        margin-bottom: 1.5rem;
        line-height: 1.4;
        font-size: 18px;
      }

      .about p {
        margin-bottom: 1.5rem;
        line-height: 2;
      }

      .spacing {
        letter-spacing: 1.4px;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        max-width: 1200px;
      }

      .tile {
        position: relative;
        overflow: hidden;
        margin: 14px 8px 40px 8px;
      }

      .tile img {
        width: 275px;
        display: block;
        margin: 0 auto;
        border-radius: 50%;
        object-fit: cover;
      }

      .tile--avatar img {
        width: auto;
      }

      .tile h2 {
        font-weight: normal;
        letter-spacing: 1.5px;
        margin: 15px 0 0 0;
      }

      .tile p {
        margin: 0;
      }

      @media (max-width: 1210px) {
        .grid {
          grid-template-columns: repeat(3, 1fr);
        }
      }

      @media (max-width: 920px) {
        .grid {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      /* Mobile / tablet 640px a méně */
      @media (max-width: 640px) {
        .about-text {
          width: auto;
        }

        .about-flex {
          flex-direction: column;
          gap: 1rem;
        }

        .grid {
          grid-template-columns: repeat(1, 1fr);
        }

        .tile img {
          width: 100%;
        }
      }

      /* Media query pro menší obrazovky (tablet/mobil) */
      @media (max-width: 768px) {
        #about p {
          line-height: 1.6;
        }
      }
    </style>
