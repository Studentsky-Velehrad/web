---
import "../styles/global.css";

interface Props {
    title: string;
    description?: string;
    image?: string;
}

const { title, description = "Celostátní setkání věřících vysokoškoláků a mladých pracujících. 30. dubna – 3. května 2026 na Velehradě.", image = "/images/cover.webp" } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site);
---

<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content={canonicalURL}>
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={socialImageURL}>
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:locale" content="cs_CZ">
    <meta property="og:site_name" content="Studentský Velehrad">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content={canonicalURL}>
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content={socialImageURL}>

    <!-- Font preloading -->
    <link rel="preload" href="/src/fonts/Ohrada.otf" as="font" type="font/otf" crossorigin>
    <link rel="preload" href="/src/fonts/HelveticaNow.otf" as="font" type="font/otf" crossorigin>
    <link rel="preload" href="/src/fonts/HelveticaNowBold.otf" as="font" type="font/otf" crossorigin>
    <link rel="preload" href="/src/fonts/HelveticaNowXBold.otf" as="font" type="font/otf" crossorigin>
    <link rel="preload" href="/src/fonts/OpenSans-Regular.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/src/fonts/OpenSans-Italic.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/src/fonts/OpenSans-Bold.woff2" as="font" type="font/woff2" crossorigin>

    <style is:global>
        @font-face {
            font-family: 'Ohrada';
            src: url('/src/fonts/Ohrada.otf') format('opentype');
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }

        @font-face {
            font-family: 'Helvetica Now';
            src: url('/src/fonts/HelveticaNow.otf') format('opentype');
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }

        @font-face {
            font-family: 'Helvetica Now Bold';
            src: url('/src/fonts/HelveticaNowBold.otf') format('opentype');
            font-weight: bold;
            font-style: normal;
            font-display: swap;
        }

        @font-face {
            font-family: 'Helvetica Now XBold';
            src: url('/src/fonts/HelveticaNowXBold.otf') format('opentype');
            font-weight: 800;
            font-style: normal;
            font-display: swap;
        }

        @font-face {
            font-family: 'Open Sans';
            src: url('/src/fonts/OpenSans-Regular.woff2') format('woff2');
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }

        @font-face {
            font-family: 'Open Sans';
            src: url('/src/fonts/OpenSans-Italic.woff2') format('woff2');
            font-weight: normal;
            font-style: italic;
            font-display: swap;
        }

        @font-face {
            font-family: 'Open Sans';
            src: url('/src/fonts/OpenSans-Bold.woff2') format('woff2');
            font-weight: bold;
            font-style: normal;
            font-display: swap;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Open Sans', 'Helvetica Now', Arial, sans-serif;
            font-size: 16px;
            line-height: 1.6;
            color: #424753;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Helvetica Now Bold', Arial, sans-serif;
        }

        a {
            color: inherit;
            text-decoration: none;
        }

        img {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <slot />
</body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100%;
  }

  body {
    display: flex;
    flex-direction: column;
  }
</style>
